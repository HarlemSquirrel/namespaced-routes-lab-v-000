<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>
  <%= f.label :artist_sort_order %>
  <%= f.radio_button :artist_sort_order, "ASC" %>
  <%= label :artist_sort_order_asc, "Ascending" %>
  <%= f.radio_button :artist_sort_order, "DESC" %>
  <%= label :artist_sort_order_desc, "Descending" %>
  <br>
  <%= f.label "Song Sort Order" %>
  <%= f.radio_button :song_sort_order, "ASC" %>
  <%= label :song_sort_order_asc, "Ascending" %>
  <%= f.radio_button :song_sort_order, "DESC" %>
  <%= label :song_sort_order_desc, "Descending" %>
  <br>
  <%= f.submit %>
<% end %>
